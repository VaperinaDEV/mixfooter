{{#if showFooter}}
  <div class="wrap">
    <div class="flexbox">
      <div class="first-box">
        <div class="heading">
          {{mainHeading}}
        </div>
        <div class="blurb">
          {{blurb}}
        </div>
      </div>
      <div class="second-box">
        <div class="links">
          {{#each linkSections as |section|}}
            <div class="list">
              <span class="{{section.className}}" title="{{section.title}}">
                {{section.text}}
              </span>
              <ul>
                {{#each section.childLinks as |link|}}
                  <li class="footer-section-link-wrapper {{link.className}}">
                    <a class="footer-section-link" title="{{link.title}}" href="{{link.href}}" target="{{link.target}}">
                      {{link.text}}
                    </a>
                  </li>
                {{/each}}
              </ul>
            </div>
          {{/each}}
        </div>
      </div>
      <div class="third-box">
        <div class="partnersdiv">
          <li><a href="https://liquidhall.com" target="_blank"><img src="https://vaperinas3booster.b-cdn.net/original/1X/7ccf633fcfe0d357b5bce9820278dc12be35f872.svg"></a></li>
          <li><a href="https://evapor.co.uk" target="_blank"><img src="https://vaperinas3booster.b-cdn.net/original/1X/52f03e96770a8d63e4f9bbf216cb7465adb767d9.png" style="border-radius: 10px;"></a></li>
          <li><a href="https://evapes.ie" target="_blank"><img src="https://vaperinas3booster.b-cdn.net/original/1X/b9bddada7abf27bcca50dfe87bd89dbe39f45183.png"></a></li>
        </div>
      </div>
      <div class="third-box">
        <div class="footer-links">
          {{#each smallLinks as |link|}}
            <a class="small-link {{link.className}}" title="{{link.title}}" target="{{link.target}}" href="{{link.href}}">{{link.text}}</a>
          {{/each}}
        </div>
        <div class="social">
          {{#each socialLinks as |link|}}
            <a class="social-link {{link.className}}" title="{{link.title}}" target="{{link.target}}" href="{{link.href}}">{{d-icon link.icon}}</a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
{{/if}}
